<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="userNickName"
            android:fontFamily="@font/scd5"
            android:textColor="#000000"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"/>

        <LinearLayout
            android:layout_below="@+id/userNickName"
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:background="@drawable/adapter_user_chat_layout">

            <TextView
                android:id="@+id/message"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="message"
                android:textColor="#000000"
                android:fontFamily="@font/gmm"
                android:padding="5dp"
                android:textSize="16dp"/>
        </LinearLayout>

        <View
            android:id="@+id/bottomView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_below="@+id/one"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/one"
            android:layout_marginLeft="3dp"
            android:layout_above="@+id/bottomView">

            <TextView
                android:id="@+id/messageChecked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="#FBE62A"
                android:text="1"/>

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="11:11"
                android:fontFamily="@font/scd5"
                android:textSize="8dp" />
        </LinearLayout>



    </RelativeLayout>
</RelativeLayout>